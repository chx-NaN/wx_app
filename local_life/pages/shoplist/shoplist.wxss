/* pages/shoplist/shoplist.wxss */

.shop-item {
  display: flex;
  padding: 15rpx;
  border: 1rpx solid #efefef;
  box-shadow: 4rpx 4rpx 20rpx rgb(161, 160, 160);
  border-radius: 10rpx;
  
  margin: 15rpx;
}

.thumb image {
  height: 250rpx;
  width: 250rpx;
  display: block;
  margin-right: 15rpx;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}

.shop-title {
  font-weight: bold;
}

